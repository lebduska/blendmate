+            aria-label="socket-status"
+          />
+          <span className="text-xs opacity-80">{statusLabel(props.socketStatus)}</span>
+        </div>
+
+        <button
+          type="button"
+          className={"text-xs px-2 py-1 rounded hover:bg-white/10 " + (props.inspectorOpen ? "bg-white/10" : "")}
